
<% if @work_log.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@work_log.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
    <% @work_log.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="" style="width: 75%; padding: 5%;">
  <%= simple_form_for(@work_log , url: user_work_logs_path(@work_log, user_id: work_log.user_id)) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :date, as: :date, label: "DATE", default: Date.today %>
      <%= f.input :log_in_time, as: :time, label: "Start Time"%>
      <%= f.input :log_out_time, as: :time, label: "End Time", include_blank: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "LOG WORK", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
